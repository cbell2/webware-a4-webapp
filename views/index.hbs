<body>


{{> header}}

<!-- END OF NAVBAR -->
<br>

<div class="row" style="display: inline-block; width: 100%">


{{> modals}}


    <div class="col-10" style="float: left">

        <div id="cardsGoHere" style="display: inline">
            {{#each seltzers}}
            <div class="card" style="width: 300px; height: 400px; text-align: center">
                <img class="card-img-top" style="width: 70%" src="{{this.seltzerID}}.jpeg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.seltzer}}</h5>
                    <p class="card-title" style="margin-top: -15px;">{{this.size}}</p>
                    <h3 style="font-weight: bold; color: #00b8a4; margin-top: -10px;">{{this.price}}</h3>
                    <a href="#" class="btn btn-primary" style="display: inline-block; font-weight: bold">Add to Cart</a>
                    <a href="#" class="btn btn-primary" style="display: inline-block; width: 42px">
                        <i class="fas fa-heart"></i>
                    </a>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

    <div class="col-2" style="float: right; text-align: center; position: fixed; right: 20px; height: 80%; background-color: #efefef; z-index:99; ">

        <div class="shadow p-3 mb-5 bg-white" style="margin-right: -20px; margin-left: -20px;">
            <h3 style="color: #7b7b7b;">Personal Cart</h3>
        </div>

        <div id="addToCart" style="margin-top: -47px; max-height: 85%; overflow-y: scroll; z-index:1; overflow-x: hidden;">
            <div class="card" style="width: 100%;">
                <div class="row">
                    <img class="card-img-top" src="polar.jpg" alt="Card image cap" style="width: 80px; height: 80px; margin-left: 8%">
                    <div style="max-width: 50%">
                        <p style="margin: 0; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">Polar</p>
                        <p style="margin: 0; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">100% Natural Seltzer Jr</p>
                        <p style="margin: 0; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">$9.99</p>
                    </div>
                    <div>
                        <i class="fas fa-times" style="font-size: 25px"></i>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

