





{{#if isLoggedIn}}
    <div class="modal fade bannerformmodal" tabindex="-1" role="dialog" id="loggedInModal">
        <div class="modal-dialog modal-sm">
            <div style="width: max-content; "class="modal-content">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Hi {{username}}</h4>
                        <button type="button" class="close" data-dismiss="modal" >&times;</button>
                    </div>
                    <div class="modal-body">
                        <h5>Hope you're enjoying using fizz.</h5>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
<div class="modal fade bannerformmodal" tabindex="-1" role="dialog" id="signInModal">
    <div class="modal-dialog modal-sm">
        <div style="width: max-content; "class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Sign in</h4>
                    <button type="button" class="close" data-dismiss="modal" >&times;</button>
                </div>
                <div class="modal-body">
                    <form id="signIn">
                        <div class="form-group">
                            <div class="input-group">
                                <span style='width: 20px' class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input id="email" type="email" class="form-control" placeholder="Email" name="email1" required = "required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span style='width: 20px' class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input id="password" type="text" class="form-control" placeholder="Password" name="password"/>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button data-dismiss="modal" aria-hidden="true" type="button" class="btn btn-blue">Submit</button>
                    <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                    <p style="margin: auto";>Not a member? <a id="signUp" href="javascript:signingUp()">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade bannerformmodal" tabindex="-1" role="dialog" aria-labelledby="bannerformmodal" aria-hidden="true" id="signUpModal">
    <div class="modal-dialog modal-sm">
        <div style="width: max-content; "class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="signUp">
                        <div class="form-group">
                            <div class="input-group">
                                <span style='width: 20px' class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input id="first_name" type="text" class="form-control" placeholder="First Name" name="fName"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span style='width: 20px' class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input id="signUpEmail" type="text" class="form-control" placeholder="Email" name="email"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span style='width: 20px' class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input id="signUppassword" type="password" class="form-control" placeholder="Password" name="password"/>
                            </div>
                        </div>
                        <div>
                        <!--suppress CssInvalidPropertyValue -->
                            <button style="width: -webkit-fill-available;" id="signInSubmit" class="btn btn-blue">Submit</button>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <!--suppress CssInvalidPropertyValue -->
                    <button style="width: -webkit-fill-available;" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancel Signing up</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

<script type="text/javascript">
    function signingUp() {
        $('#signInModal').modal('hide');
        $('#signUpModal').modal('show');
    }
</script>

<script>
    $(function () {
        $("#signInSubmit").click(function(event) {
            event.preventDefault();
            newUser = {
                name: $('#first_name').val(),
                email: $('#signUpEmail').val(),
                password: $('#signUppassword').val()
            };

            $.ajax({
                url: '/signup',
                type: "POST",
                contentType: 'application/JSON',
                data: JSON.stringify(newUser),
                success: function (reponse) {
                    alert("success");
                    $('.modal-body').replaceWith('<h4>Succesful Login, redirecting </h4> <br> <h5> Redirecting </h5>');
                    setTimeout(function () {
                        location.reload();
                    }, 2000)
                }
            });
        })
    })
</script>